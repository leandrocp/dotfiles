// references
// https://github.com/mrnugget/dotfiles/blob/master/zed_settings.json

{
  "assistant": {
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "create_directory": true,
          "bash": true,
          "batch_tool": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "find_replace_file": true,
          "edit_files": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "path_search": true,
          "read_file": true,
          "regex_search": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2",
    "show_hints": false
  },
  "theme": "Catppuccin Frapp√© - No Italics",
  "ui_font_family": "Hack Nerd Font Mono",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "copy_on_select": true,
    "dock": "bottom"
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "use_smartcase_search": true,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
}
