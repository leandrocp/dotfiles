// references
// https://github.com/mrnugget/dotfiles/blob/master/zed_settings.json

{
  "theme": "Catppuccin Frapp√© - No Italics",
  "ui_font_family": "Hack Nerd Font Mono",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "copy_on_select": true,
    "dock": "right"
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "format_on_save": "off",
  "ensure_final_newline_on_save": false,
  "use_autoclose": false,
  "languages": {
    "Markdown": {
      "soft_wrap": "none"
    },
    "Erlang": {
      "language_servers": ["!erlang-ls", "elp", "..."]
    },
    "Elixir": {
      "language_servers": ["!elixir-ls", "!next-ls", "lexical", "..."]
    },
    "HEEX": {
      "language_servers": ["!elixir-ls", "!next-ls", "lexical", "..."]
    }
  },
  "elixir": {
    "formatter": {
      "external": {
        "command": "mix format",
        "arguments": ["--stdin", "--stdin-filename", "{buffer_path}"]
      }
    }
    // "lsp": {
    //   "local": {
    //     "path": "/Users/leandro/code/github/lexical-lsp/lexical/_build/dev/package/lexical/bin/start_lexical.sh",
    //     "arguments": []
    //   }
    // }
  },
  "lsp": {
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false,
        "suggestSpecs": false,
        "fetchDeps": false,
        "autoInsertRequiredAlias": false
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "linkedProjects": ["Cargo.toml", "native/comrak_nif/Cargo.toml"]
      }
    }
  },
  "assistant": {
    "version": "1",
    "provider": {
      "default_model": {
        "name": "llama3:latest",
        "max_tokens": 2048,
        "keep_alive": "10m"
      },
      "name": "ollama",
      "low_speed_timeout_in_seconds": null
    }
  }
}
