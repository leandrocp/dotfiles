// references
// https://github.com/mrnugget/dotfiles/blob/master/zed_settings.json

{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "show_hints": false
  },
  "theme": "Catppuccin Frapp√© - No Italics",
  "ui_font_family": "Hack Nerd Font Mono",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "copy_on_select": true,
    "dock": "bottom"
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "use_smartcase_search": true,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "format_on_save": "off",
  "ensure_final_newline_on_save": false,
  "use_autoclose": false,
  "languages": {
    "Markdown": {
      "soft_wrap": "none"
    },
    "Erlang": {
      "language_servers": ["!erlang-ls", "elp", "..."]
    },
    "Elixir": {
      "language_servers": ["elixir-ls", "!next-ls", "!lexical", "..."],
      // "format_on_save": {
      //   "external": {
      //     "command": "mix",
      //     "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
      //   }
      // }
    },
    "HEEX": {
      "language_servers": ["elixir-ls", "!next-ls", "!lexical", "..."]
    }
  },
  "lsp": {
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false,
        "suggestSpecs": false,
        "fetchDeps": false,
        "autoInsertRequiredAlias": false
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "linkedProjects": [
          "Cargo.toml",
          "/Users/leandro/code/github/leandrocp/mdex/native/comrak_nif/Cargo.toml",
          "/Users/leandro/code/github/leandrocp/autumn/native/autumn/Cargo.toml"
        ]
      }
    }
  }
}
