# vi: ft=zsh

alias vi=nvim
alias vim=nvim
alias e='nvim'
alias up='brew upgrade && rtx self-update && znap pull && nvim-update && brew cleanup'
alias g='git'
alias gg='lazygit'
alias tf='terraform'

alias rm='rm -i'
alias df='df -h'
alias du='du -h'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias l='ls'
alias ls='exa --icons --sort modified'
alias ll='exa --long --icons --sort modified'
alias -g G='| grep -i --color'
alias -g L='| less'
alias -g C='| pbcopy'

alias nvim-update='rtx install neovim@nightly -f'
alias elixir-update='rtx install elixir@main-otp-26 -f'
alias rust-update='rtx install rust@stable -f'

alias asdf=rtx
alias dns_reset="dscacheutil -flushcache && killall -HUP mDNSResponder"
