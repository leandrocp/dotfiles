# vi: ft=zsh

alias e='nvim'
alias up='brew upgrade; brew cleanup; zinit self-update; zinit update; nvim-update'
alias g='git'
alias gg='lazygit'

alias rm='rm -i'
alias df='df -h'
alias du='du -h'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias l='ls'
alias ls='eza --icons --sort modified --git'
alias ll='eza --long --icons --sort modified --git'
alias -g G='| grep -i --color'
alias -g L='| less'
alias -g C='| pbcopy'

alias nvim-update='mise install neovim@nightly -f'
alias ts='tree-sitter'

alias asdf='mise'
alias dns_reset="dscacheutil -flushcache && killall -HUP mDNSResponder"
