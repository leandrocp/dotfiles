# vi: ft=zsh

alias e='zed'
alias up='brew upgrade; mise self-update --yes; znap pull; nvim-update; brew cleanup'
alias g='git'
alias gg='lazygit'
alias tf='terraform'

alias rm='rm -i'
alias df='df -h'
alias du='du -h'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias l='ls'
alias ls='exa --icons --sort modified'
alias ll='exa --long --icons --sort modified'
alias -g G='| grep -i --color'
alias -g L='| less'
alias -g C='| pbcopy'

alias nvim-update='mise install neovim@nightly -f'

alias asdf='mise'
alias dns_reset="dscacheutil -flushcache && killall -HUP mDNSResponder"