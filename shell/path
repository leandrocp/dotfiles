# vi: ft=zsh

if [[ "$OSTYPE" == "darwin"* ]]; then

  export GPG_BIN=/usr/local/opt/gnupg2/bin
  export POSTGRES_PATH=/Applications/Postgres.app/Contents/Versions/latest
  export POSTGRES_BIN_PATH=$POSTGRES_PATH/bin
  export POSTGRES_LIB_PATH=$POSTGRES_PATH/lib
  export FLYCTL_INSTALL="$HOME/.fly"
  export CARGO_BIN=$HOME/.cargo/bin

  export PATH=$HOME/.bin:./bin:$HOME/.local/bin:${GPG_BIN}:$FLYCTL_INSTALL/bin:${CARGO_BIN}:/usr/local/bin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/python/libexec/bin:${POSTGRES_BIN_PATH}:${POSTGRES_LIB_PATH}:/usr/local/lib:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin:/opt/local/bin:
  export MANPATH=/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH
fi
